extends layout

block content
    h1= "OnLine Clinic"
    p Welcome to your online Clinic!


    //WRAPPER
    #wrapper

        // ADD CLIENTS
        h1 Online Scheduling 
        br  
        h2 schedule Query
        #addClient
            fieldset
                input#inputClientFullname(type='text', placeholder='Name')
                input#inputClientPhone(type='text', placeholder='Phone')
                input#inputClientSchedulingDate(type='date')
                input#inputClientSchedulingHour(type='time')
                br    
                button#btnAddClient Add Client
                br
                br
                br
                br
        
    //WRAPPER
    #wrapper

        // TABLE WITH LIST OF CLIENTS 
        h2 Scheduled Calls
        #userList
            table
                thead
                    th Client
                    th Phone
                    th Scheduled
                    th Cancel Service?
                tbody


         // INFORMATION FROM CLIENT
        #userInfo
            h2 Information from Client
            p
                strong Client:
                |  <span id='clientInfoName'></span>
                br
                strong Phone:
                |  <span id='clientInfoPhone'></span>
                br
                strong Scheduled:
                |  <span id='clientInfoScheduledDate'></span>
                |  <span id='clientInfoScheduledHour'></span>
                br



        
    

